---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Shop & Repair Map">
  <section class="section">
    <div class="section-inner">
      <h1>Shop &amp; Repair</h1>
      <p>
        Browse local shops and repair services that support sustainable fashion in the Hudson Valley.
      </p>

      <iframe
        class="embed-frame"
        src="https://example.com" 
        title="Directory of sustainable fashion shops and repair services"
        loading="lazy">
        <p>
          Your browser does not support iframes. You can access the directory directly at
          <a href="https://example.com">this link</a>.
        </p>
      </iframe>
    </div>
  </section>

  <div>
    <img src="/clothes-line.png" alt="Row of clothes with Hudson Valley image as the pattern" class="hero-image">
  </div>
</BaseLayout>
